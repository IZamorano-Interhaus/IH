<odoo>
  <data>
    <record id="view_complete_order" model="ir.ui.view">
        <field name="name">account.move.form.update</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='ref']" position="after" >
				<field name="afecto"/>
                <field name="exento"/>
			</xpath>
		</field>       
    </record>
    <record id="view_complete_order_line" model="ir.ui.view">
        <field name="name">account.move.line.form.update</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_move_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after" >
				<field name="afecto"/>
                <field name="exento"/>
			</xpath>
		</field>       
    </record>
  </data>
</odoo>